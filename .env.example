# ============================================================================
# IEMS - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
# ============================================================================

# Application Settings
# ----------------------------------------------------------------------------
APP_NAME="Intelligent Energy Management Simulator"
APP_VERSION="0.1.0"
DEBUG=False

# NASA POWER API
# ----------------------------------------------------------------------------
NASA_API_BASE_URL="https://power.larc.nasa.gov/api/temporal/hourly/point"
NASA_API_TIMEOUT=30
NASA_API_RETRIES=3

# Database (Optional - Future Use)
# ----------------------------------------------------------------------------
# DATABASE_URL="postgresql://user:password@localhost:5432/iems"

# File Paths
# ----------------------------------------------------------------------------
DATASET_PATH="./backend/Dataset"
TRAINED_MODELS_PATH="./backend/trained_models"

# Training Configuration
# ----------------------------------------------------------------------------
DEFAULT_RANDOM_SEED=42
DEFAULT_TRAIN_TEST_SPLIT=0.8

# Genetic Algorithm Defaults
# ----------------------------------------------------------------------------
GA_POPULATION_SIZE=100
GA_NUM_GENERATIONS=50
GA_CROSSOVER_PROB=0.7
GA_MUTATION_PROB=0.2

# DQN Configuration
# ----------------------------------------------------------------------------
DQN_LEARNING_RATE=0.001
DQN_GAMMA=0.99
DQN_EPSILON_START=1.0
DQN_EPSILON_END=0.01
DQN_EPSILON_DECAY=0.995
DQN_BATCH_SIZE=64
DQN_MEMORY_SIZE=10000
DQN_TARGET_UPDATE_FREQ=10

# Cost Parameters (USD)
# ----------------------------------------------------------------------------
PV_COST_PER_KW=1000.0
BATTERY_COST_PER_KWH=500.0
ELECTRICITY_COST_PER_KWH=0.15
GRID_SELL_PRICE_PER_KWH=0.08

# Logging
# ----------------------------------------------------------------------------
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
# LOG_FILE="./logs/iems.log"  # Uncomment to enable file logging

# ============================================================================
